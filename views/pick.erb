<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <title>colors</title>
    <style>
    body{
        background-color:#fff;
    }
        
    .container{
        margin: 0 auto;
        width: 1000px;
    }
    .canvas{
        background-color: #fff;
        border: solid 2px #ccc;
        text-align:center;
    }
    .colorcode{
        background-color: #fff;
        border: solid 2px #ccc;
        text-align: center;
        height: 50px;
        margin-top: 25px;
    }
    .log{
        background-color: #fff;
        border: solid 2px #ccc;
        margin-top: 25px;
    }
    
    </style>
</head>
<body>
    <div class="container">
        <div class="canvas">
            <canvas id="cnvs" width="936" height="585"></canvas>
        </div>
        <div class="colorcode">
            <div id="result"></div>
        </div>
        <div class="log">
            <table>
                <% @logs.each do |log| %>
                    <tr>
                        <td><%= log.log %></td>
                    </tr>
                <% end %>
            </table>
        </div>
    </div>
    <script type="text/javascript">
                
    var canvas = document.getElementById('cnvs');
    var context = canvas.getContext('2d');
    var w = canvas.width;
    var h = canvas.height;
    var x = 0;
    var y = 0;
                
    var image = new Image();
                
    image.src = "<%= @pick.img_url %>";
                
    context.drawImage(image, 0, 0);
    
    var color = document.getElementById('color');
    function onClick(e) {
        var rect = e.target.getBoundingClientRect();
        x = e.clientX - rect.left;
        y = e.clientY - rect.top;
        var pixel = context.getImageData(x, y, 1, 1);
        var data = pixel.data;
        console.log(pixel.data); // 出力：CanvasPixelArray
        
        numberInt = pixel.data;    //クリックされた要素の背景色取得

        hexString = "#"+parseInt(numberInt[0]).toString(16)+parseInt(numberInt[1]).toString(16)+parseInt(numberInt[2]).toString(16);

        hexString= hexString.toUpperCase();    // hexStringを大文字に変換

        resulut = document.getElementById("result");
        resulut.innerText = hexString;
        
        var xhr= new XMLHttpRequest();
        var param = "colorcode=" + encodeURIComponent(hexString);
        console.log("param", hexString, param);
        xhr.open("POST","/logs?"+param);
        xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
        xhr.send();
        
        // location.reload();
    }
    canvas.addEventListener('click', onClick, false);
        
    </script>
</body>
</html>